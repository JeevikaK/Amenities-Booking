                        <div>4</div>
                        <div>5</div>
                        <div>6</div>
                        <div>7</div>
                    </div>
                </div>
                <div class="month-list">
                </div>
            </div>
        </div>
        <div class="book_right">
            <p class="book_right_heading"></p>
            <form action="/book/:id" class="select_timeslot" method="POST">
                <input type="radio" id="time10" name="time" value="10:00 AM to 11:00 AM" class="box-shadow">
                <label for="time10" class="book_time">10:00 AM to 11:00 AM</label><br>
                <input type="radio" id="time11" name="time" value="11:00 AM to 12:00 PM" class="box-shadow">
                <label for="time11" class="book_time">11:00 AM to 12:00 PM</label><br>
                <input type="radio" id="time12" name="time" value="12:00 AM to 13:00 PM" class="box-shadow">
                <label for="time12" class="book_time">12:00 AM to 13:00 PM</label><br>
                <input type="radio" id="time13" name="time" value="13:00 AM to 14:00 PM" class="box-shadow">
                <label for="time13" class="book_time">13:00 AM to 14:00 PM</label><br>
                <input type="radio" id="time14" name="time" value="14:00 AM to 15:00 PM" class="box-shadow">
                <label for="time14" class="book_time">14:00 AM to 15:00 PM</label><br>
                <input type="radio" id="time15" name="time" value="15:00 AM to 16:00 PM" class="box-shadow">
                <label for="time15" class="book_time">15:00 AM to 16:00 PM</label><br>
                <input type="radio" id="time16" name="time" value="16:00 AM to 17:00 PM" class="box-shadow">
                <label for="time16" class="book_time">16:00 AM to 17:00 PM</label><br>
                <input type="radio" id="time17" name="time" value="17:00 AM to 18:00 PM" class="box-shadow">
                <label for="time17" class="book_time">17:00 AM to 18:00 PM</label><br>
                <input type="radio" id="time18" name="time" value="18:00 AM to 19:00 PM" class="box-shadow">
                <label for="time18" class="book_time">18:00 AM to 19:00 PM</label><br>
                <input type="radio" id="time19" name="time" value="19:00 AM to 20:00 PM" class="box-shadow">
                <label for="time19" class="book_time">19:00 AM to 20:00 PM</label><br>
                <input type="submit" value="Submit" class="book_submit">
            </form>  
        </div>
    </div>
    <script src="/app.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
</body>
</html>